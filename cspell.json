{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "dictionaries": [
    "companies",
    "css",
    "fonts",
    "html",
    "node",
    "people-name",
    "project-words",
    "softwareTerms",
    "typescript",
    "lorem-ipsum"
  ],
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "noSuggest": true,
      "path": "./.cspell/project-words.txt"
    },
    {
      "name": "people-name",
      "noSuggest": true,
      "path": "./.cspell/people-name.txt"
    },
    {
      "name": "french-contents",
      "path": "./.cspell/french-contents.txt",
      "noSuggest": true
    }
  ],
  "enableFiletypes": ["astro", "mdx"],
  "gitignoreRoot": ".",
  "ignorePaths": [
    ".husky",
    ".vscode",
    "CHANGELOG.md",
    "LICENSE",
    "node_modules",
    "public",
    "pnpm-lock.yaml"
  ],
  "ignoreRegExpList": ["Email", "Urls", "#[\\w-]*", "/id: '.*'/g"],
  "import": ["@cspell/dict-fr-fr/cspell-ext.json"],
  "language": "en",
  "useGitignore": true,
  "version": "0.2",
  "overrides": [
    {
      "filename": [
        ".cspell/french-contents.txt",
        "content/fr/**",
        "README.md",
        "src/pages/!(en)/**",
        "src/translations/fr.json"
      ],
      "language": "en,fr",
      "dictionaries": ["french-contents"],
      "caseSensitive": false,
      "allowCompoundWords": true
    }
  ]
}
