---
import type { HTMLAttributes } from "astro/types";
import type { RoutableCollectionKey } from "../../../lib/astro/collections/types";
import type { QueriedEntry } from "../../../services/collections";
import { useI18n } from "../../../services/i18n";
import { buildToc } from "../../../services/toc";
import type { Img } from "../../../types/data";
import Collapsible from "../../molecules/collapsible/collapsible.astro";
import PageOpener from "../../molecules/page-opener/page-opener.astro";
import TableOfContents from "../../molecules/table-of-contents/table-of-contents.astro";

type Props = Omit<HTMLAttributes<"article">, "title"> & {
  cover?: Omit<Img, "alt"> | null | undefined;
  feed?: string | URL | null | undefined;
  headings?: QueriedEntry<RoutableCollectionKey>["headings"] | null | undefined;
  title: string;
};

const {
  class: className,
  cover,
  feed,
  headings,
  title,
  ...attrs
} = Astro.props;
const { translate } = useI18n(Astro.currentLocale);
const body = await Astro.slots.render("default");
const hasMeta = Astro.slots.has("meta");
const hasIntro = Astro.slots.has("intro");
---

<article {...attrs} class:list={[className, "page"]}>
  <PageOpener class="page-header" cover={cover} feed={feed} title={title}>
    {hasMeta ? <slot name="meta" slot={hasMeta ? "meta" : ""} /> : null}
    {hasIntro ? <slot name="intro" slot={hasIntro ? "intro" : ""} /> : null}
  </PageOpener>
  {
    headings?.length ? (
      <div class="page-sidebar">
        <Collapsible class="page-toc" open>
          <h2 slot="label">{translate("collapsible.toc.title")}</h2>
          <TableOfContents
            class="page-toc-body"
            headings={buildToc(headings)}
          />
        </Collapsible>
      </div>
    ) : null
  }
  {body ? <div class="page-body" set:html={body} /> : null}
  {
    Astro.slots.has("disconnected") ? (
      <div class="page-disconnected">
        <slot name="disconnected" />
      </div>
    ) : null
  }
  {
    Astro.slots.has("footer") ? (
      <footer class="page-footer">
        <slot name="footer" />
      </footer>
    ) : null
  }
</article>

<style>
  @layer components {
    .page {
      --main-col-width: 100%;
      --sidebar-col-width: 0;

      display: grid;
      grid-template-columns:
        minmax(calc(var(--main-col-width) / 2), var(--main-col-width))
        minmax(0, var(--sidebar-col-width));
      grid-template-rows: repeat(5, minmax(0, auto));
      column-gap: calc(var(--gutter) / 2);
      justify-content: center;

      @media (--prose) {
        --main-col-width: calc(var(--size-prose) + 2.5 * var(--gutter));
        --sidebar-col-width: calc(var(--size-prose) / 2.5 + 2 * var(--gutter));
      }
    }

    .page-header,
    .page-sidebar,
    .page-body,
    .page-disconnected,
    .page-footer {
      grid-column: 1 / -1;
    }

    .page-header,
    .page-toc,
    .page-body,
    .page-disconnected,
    .page-footer {
      @media (--prose-sidebar) {
        grid-column: 1;
      }
    }

    .page-sidebar {
      @media (--prose-sidebar) {
        grid-column: 2;
        grid-row: 1 / -1;
      }
    }

    .page-header,
    .page-toc,
    .page-body,
    .page-footer {
      box-shadow: var(--shadow-raised-to-top-center);

      @media (--prose) {
        box-shadow: var(--shadow-raised-to-top-left);
      }
    }

    .page-toc,
    .page-body,
    .page-footer {
      background: var(--color-regular);
      color: var(--color-on-regular);
    }

    .page-toc-body,
    .page-body,
    .page-footer {
      padding-inline: var(--gutter);
    }

    .page-body,
    .page-footer {
      padding-block: var(--gutter);

      @media (--prose) {
        border-inline: var(--border-size-sm) solid var(--color-border);
      }

      &
        > :global(
          :not(a, strong, em, del, span, input, code, br)
            + :not(a, strong, em, del, span, input, code, br)
        ) {
        margin-block: var(--spacing-md);
      }
    }

    .page-header,
    .page-toc {
      @media (--smaller-than-prose) {
        border-inline: none;
      }
    }

    .page-toc {
      @media (--prose-sidebar) {
        position: sticky;
        top: calc(var(--gutter) / 2);
        border-radius: var(--border-radii-md);
      }

      & h2 {
        font-size: var(--font-size-2xl);

        @media (--prose-x2) {
          font-size: var(--font-size-lg);
        }
      }
    }

    .page-toc-body {
      padding-block: var(--spacing-md);
    }

    :where(.page:has(.page-toc)) .page-header {
      @media (--smaller-than-prose-sidebar) {
        border-block-end: none;
      }
    }

    :where(.page:has(.page-body)) .page-header {
      border-end-start-radius: 0;
      border-end-end-radius: 0;
    }

    :where(.page:has(.page-disconnected):not(:has(.page-body))) .page-header,
    :where(.page:has(.page-disconnected)) .page-body {
      margin-block-end: var(--gutter);
    }

    :where(.page:has(.page-disconnected)) .page-body,
    .page-body:where(:last-child),
    .page-footer {
      border-block-end: var(--border-size-sm) solid var(--color-border);

      @media (--prose) {
        border-end-start-radius: var(--border-radii-md);
        border-end-end-radius: var(--border-radii-md);
      }
    }

    :where(.page:has(.page-body + .page-footer)) .page-body {
      padding-block-end: 0;
    }

    :where(.page:has(.page-disconnected + .page-footer)) .page-footer {
      margin-block-start: var(--gutter);
      border-block-start: var(--border-size-sm) solid var(--color-border);
      border-start-start-radius: var(--border-radii-md);
      border-start-end-radius: var(--border-radii-md);
    }
  }
</style>
