---
import type { GetStaticPaths } from "astro";
import type { ComponentProps } from "astro/types";
import PageLayout from "../components/templates/page-layout/page-layout.astro";
import { queryCollection } from "../lib/astro/collections/query-collection";
import { isAvailableRoute, useI18n } from "../utils/i18n";

export const getStaticPaths = (async () => {
  const { entries: pages } = await queryCollection("pages", {
    where: { locale: "en" },
  });

  return pages
    .filter((page) => {
      const maybeStaticRoute = page.id
        .replace(`${page.locale}/`, "")
        .replaceAll("/", ".")
        .replaceAll("-", ".");

      return !isAvailableRoute(maybeStaticRoute);
    })
    .map(({ slug, ...page }) => {
      return {
        params: { slug },
        props: { ...page },
      };
    });
}) satisfies GetStaticPaths;

const { Content, ...page } = Astro.props;
const { route, translate } = useI18n(Astro.currentLocale);
const breadcrumb: ComponentProps<typeof PageLayout>["breadcrumb"] = [
  { label: translate("page.home.title"), url: route("home") },
  { label: page.title, url: Astro.url.href },
];
---

<PageLayout
  breadcrumb={breadcrumb}
  heading={page.title}
  seo={page.seo}
  toc={page.headings}
>
  <Content slot="body" />
</PageLayout>
