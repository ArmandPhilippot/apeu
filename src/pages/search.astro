---
import type { ComponentProps } from "astro/types";
import PagefindSearch from "../components/organisms/pagefind-search/pagefind-search.astro";
import PageLayout from "../components/templates/page-layout/page-layout.astro";
import { CONFIG } from "../utils/constants";
import { useI18n } from "../utils/i18n";

const { translate } = useI18n(Astro.currentLocale);
const title = translate("page.search.title");
const seo: ComponentProps<typeof PageLayout>["seo"] = {
  title,
};
---

<PageLayout heading={title} seo={seo}>
  <PagefindSearch queryParam={CONFIG.SEARCH.QUERY_PARAM} slot="body" />
</PageLayout>
