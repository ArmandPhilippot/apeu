---
import type { ComponentProps } from "astro/types";
import Fieldset from "../../atoms/fieldset/fieldset.astro";
import Legend from "../../atoms/fieldset/legend.astro";

type Props = ComponentProps<typeof Fieldset> & {
  /**
   * The group label.
   */
  label: string;
};

const {
  class: className,
  isBordered = false,
  label,
  name,
  ...attrs
} = Astro.props;
---

<Fieldset
  {...attrs}
  class:list={["radio-group", className]}
  isBordered={isBordered}
>
  <Legend isBordered={isBordered} slot="legend">{label}</Legend>
  <slot />
</Fieldset>
