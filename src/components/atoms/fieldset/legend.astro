---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"legend"> & {
  isBordered?: boolean | null | undefined;
};

const { class: className, isBordered = false, ...attrs } = Astro.props;
---

<legend {...attrs} class:list={["legend", { bordered: isBordered }, className]}
  ><slot /></legend
>

<style>
  .legend {
    &:where(.bordered) {
      padding: var(--spacing-4xs) var(--spacing-sm);
      border: var(--border-size-sm) solid var(--color-border);
      border-radius: var(--border-radii-md);
    }
  }
</style>
