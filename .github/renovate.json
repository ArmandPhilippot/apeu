{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(ci)",
    "schedule:weekly",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "semanticCommits": "enabled",
  "semanticCommitType": "ci",
  "rangeStrategy": "bump",
  "ignorePaths": ["**/node_modules/**"]
}
