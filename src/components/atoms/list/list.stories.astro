---
import Layout from "../../templates/layout/layout.astro";
import ListItem from "./list-item.astro";
import ListComponent from "./list.astro";

const title = "List";
---

<Layout title={title}>
  <h2>Usage</h2>
  <p>
    This component is usually used to define a list of related items, either
    ordered or unordered.
  </p>
  <h2>Kind</h2>
  <h3>Unordered</h3>
  <ListComponent>
    <ListItem>Item 1</ListItem>
    <ListItem>Item 2</ListItem>
    <ListItem>Item 3</ListItem>
  </ListComponent>
  <h3>Ordered</h3>
  <ListComponent as="ol">
    <ListItem>Item 1</ListItem>
    <ListItem>Item 2</ListItem>
    <ListItem>Item 3</ListItem>
  </ListComponent>
  <h3>Nesting and mixing</h3>
  <ListComponent>
    <ListItem>Item 1</ListItem>
    <ListItem>
      Item 2
      <ListComponent as="ol">
        <ListItem>Subitem 1</ListItem>
        <ListItem>Subitem 2</ListItem>
        <ListItem>Subitem 3</ListItem>
      </ListComponent>
    </ListItem>
    <ListItem>Item 3</ListItem>
    <ListItem>Item 4</ListItem>
  </ListComponent>
  <h2>Options</h2>
  <h3><code>isInline</code></h3>
  <ListComponent isInline>
    <ListItem>Item 1</ListItem>
    <ListItem>Item 2</ListItem>
    <ListItem>Item 3</ListItem>
  </ListComponent>
  <h3><code>hideMarker</code></h3>
  <ListComponent hideMarker>
    <ListItem>Item 1</ListItem>
    <ListItem>Item 2</ListItem>
    <ListItem>Item 3</ListItem>
  </ListComponent>
  <h3><code>hideMarker</code> on a specific item</h3>
  <ListComponent>
    <ListItem>Item 1</ListItem>
    <ListItem hideMarker>Item 2</ListItem>
    <ListItem>Item 3</ListItem>
  </ListComponent>
</Layout>
