---
import type { Page } from "astro";
import type { ComponentProps } from "astro/types";
import Layout from "../../components/templates/layout/layout.astro";
import type {
  EnrichedPage,
  ListingPageCollection,
} from "../../services/collections";

type Props = Partial<ComponentProps<typeof Layout>> & {
  entry: EnrichedPage<ListingPageCollection, "preview">;
  pagination: Pick<
    Page<"index.pages" | "pages">,
    "currentPage" | "end" | "lastPage" | "size" | "start" | "total"
  >;
};

const {
  entry: { Content, hasContent, related, ...page },
  pagination,
  ...props
} = Astro.props;
---

<Layout seo={page.seo} {...props}>CollectionListingView</Layout>
