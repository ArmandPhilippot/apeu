---
import type { ComponentProps } from "astro/types";
import Page from "../../organisms/page/page.astro";
import Layout from "../../templates/layout/layout.astro";
import Heading from "../heading/heading.astro";
import LicenseComponent from "./license.astro";

const title = "License";
const seo: ComponentProps<typeof Layout>["seo"] = {
  nofollow: true,
  noindex: true,
  title: `${title} | Atoms | Components | Design system`,
};
---

<Layout seo={seo}>
  <Page heading={title}>
    <Fragment slot="body">
      <Heading as="h2">Usage</Heading>
      <p>This component is used to display an icon of the website license.</p>
      <LicenseComponent />
    </Fragment>
  </Page>
</Layout>
