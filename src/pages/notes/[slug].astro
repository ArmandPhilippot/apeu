---
import type { GetStaticPaths } from "astro";
import type { ComponentProps } from "astro/types";
import CollectionMeta from "../../components/organisms/collection-meta/collection-meta.astro";
import PageLayout from "../../components/templates/page-layout/page-layout.astro";
import { queryCollection } from "../../lib/astro/collections/query-collection";
import { useI18n } from "../../utils/i18n";

export const getStaticPaths = (async () => {
  const { entries: notes } = await queryCollection("notes", {
    where: { locale: "en" },
  });

  return notes.map(({ slug, ...note }) => {
    return {
      params: { slug },
      props: { ...note },
    };
  });
}) satisfies GetStaticPaths;

const { Content, ...page } = Astro.props;
const { route, translate } = useI18n(Astro.currentLocale);
const breadcrumb: ComponentProps<typeof PageLayout>["breadcrumb"] = [
  { label: translate("page.home.title"), url: route("home") },
  { label: translate("page.notes.title"), url: route("notes") },
  { label: page.title, url: Astro.url.href },
];
---

<PageLayout
  breadcrumb={breadcrumb}
  heading={page.title}
  seo={page.seo}
  toc={page.headings}
>
  <CollectionMeta data={page.meta} slot="meta" />
  <Content slot="body" />
</PageLayout>
