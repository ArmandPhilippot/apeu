---
import type { Polymorphic } from "astro/types";
import type { HeadingLvl } from "../../../types/tokens";

type Props<T extends HeadingLvl = "h2"> = Polymorphic<{ as: T }>;

const { as: Tag = "h2", class: className, slot, ...attrs } = Astro.props;
---

<Tag {...attrs} class:list={["heading", className]}><slot /></Tag>

<style>
  .heading {
    margin: 0;
  }
</style>
