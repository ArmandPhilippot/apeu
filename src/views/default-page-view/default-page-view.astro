---
import type { ComponentProps } from "astro/types";
import { components } from "../../components/mdx";
import Meta from "../../components/molecules/meta/meta.astro";
import ContentPage from "../../components/organisms/content-page/content-page.astro";
import Layout from "../../components/templates/layout/layout.astro";
import type { RoutableCollectionKey } from "../../lib/astro/collections/types";
import { getWebPageGraph } from "../../lib/schema-dts/graphs/webpage-graph";
import { getBreadcrumb } from "../../services/breadcrumb";
import {
  convertCollectionMetaToMetaItem,
  type QueriedEntry,
} from "../../services/collections";
import { useI18n } from "../../services/i18n";

type Props = Partial<ComponentProps<typeof Layout>> & {
  entry: QueriedEntry<RoutableCollectionKey>;
};

const {
  entry: { Content, hasContent, ...page },
  ...props
} = Astro.props;
const { translate, translatePlural } = useI18n(page.locale);
const breadcrumb = await getBreadcrumb({ route: Astro.url.pathname });
const graphs: ComponentProps<typeof Layout>["graphs"] = [
  await getWebPageGraph({ ...page, breadcrumb }),
];
---

<Layout
  breadcrumb={breadcrumb}
  graphs={graphs}
  pageTitle={page.title}
  seo={page.seo}
  {...props}
>
  <Fragment slot="open-graph">
    <meta
      content={page.meta.publishedOn.toISOString()}
      property="article:published_time"
    />
    <meta
      content={page.meta.updatedOn.toISOString()}
      property="article:modified_time"
    />
    {
      "tags" in page.meta
        ? page.meta.tags?.map((tag) => (
            <meta content={tag.label} property="article:tag" />
          ))
        : null
    }
  </Fragment>
  <ContentPage headings={page.headings} title={page.title}>
    <Meta
      items={convertCollectionMetaToMetaItem(page.meta, {
        i18n: { translate, translatePlural },
      })}
      slot="meta"
    />
    {hasContent && <Content components={components} />}
  </ContentPage>
</Layout>
