---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"dt">;

const { class: className, ...attrs } = Astro.props;
---

<dt {...attrs} class:list={["term", className]}><slot /></dt>

<style>
  .term {
    display: inline;
    font-weight: var(--font-weight-bold);
  }
</style>
