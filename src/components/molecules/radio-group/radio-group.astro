---
import type { ComponentProps } from "astro/types";
import Fieldset from "../../atoms/fieldset/fieldset.astro";
import Legend from "../../atoms/fieldset/legend.astro";

type Props = ComponentProps<typeof Fieldset> & {
  /**
   * Should the legend be inlined?
   *
   * @default false
   */
  hasInlinedLegend?: boolean | null | undefined;
  /**
   * The group label.
   */
  label: string;
};

const {
  class: className,
  hasInlinedLegend = false,
  isBordered = false,
  label,
  name,
  ...attrs
} = Astro.props;
---

<Fieldset
  {...attrs}
  class:list={["radio-group", className]}
  isBordered={isBordered}
>
  <Legend isBordered={isBordered} isInline={hasInlinedLegend} slot="legend"
    >{label}</Legend
  >
  <slot />
</Fieldset>
