---
import type { ComponentProps } from "astro/types";
import PageLayoutComponent from "../page-layout.astro";

const title = "Page with breadcrumb";

const breadcrumb: ComponentProps<typeof PageLayoutComponent>["breadcrumb"] = [
  { label: "Home", url: "#home" },
  { label: "Blog", url: "#blog" },
  { label: "Posts", url: "#posts" },
  { label: title, url: Astro.url.href },
];

const seo: ComponentProps<typeof PageLayoutComponent>["seo"] = {
  nofollow: true,
  noindex: true,
  title: `${title} | Templates | Components | Design system`,
};
---

<PageLayoutComponent breadcrumb={breadcrumb} heading={title} seo={seo}>
  <p slot="body">This is the main content of the page.</p>
</PageLayoutComponent>
