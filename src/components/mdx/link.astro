---
import type { ComponentProps } from "astro/types";
import RawLink from "../atoms/link/link.astro";

type Props = ComponentProps<typeof RawLink>;

const { href, isExternal, ...attrs } = Astro.props;
/* In the Link component I don't think it's safe to use that to detect external
 * links but for MDX contents, it's likely that a link starting with http is an
 * external link. */
const isExternalLink =
  isExternal ||
  (href?.toString().startsWith("http") &&
    !href.toString().includes(Astro.url.origin));
---

<RawLink {...attrs} href={href} isExternal={isExternalLink}><slot /></RawLink>
