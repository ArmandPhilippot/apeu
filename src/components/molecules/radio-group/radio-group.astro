---
import type { ComponentProps } from "astro/types";
import Fieldset from "../../atoms/fieldset/fieldset.astro";
import Legend from "../../atoms/fieldset/legend.astro";

type Props = ComponentProps<typeof Fieldset> & {
  /**
   * Should the radio group be inlined?
   *
   * @default false
   */
  isInline?: boolean | null | undefined;
  /**
   * The group label.
   */
  label: string;
};

const {
  class: className,
  isBordered = false,
  isInline = false,
  label,
  name,
  ...attrs
} = Astro.props;
---

<Fieldset
  {...attrs}
  class:list={["radio-group", { inlined: isInline }, className]}
  isBordered={isBordered}
>
  <Legend isBordered={isBordered} slot="legend">{label}</Legend>
  <slot />
</Fieldset>

<style>
  .radio-group {
    display: flex;

    &:where(.inlined) {
      flex-flow: row wrap;
      align-items: center;
    }

    &:where(:not(.inlined)) {
      flex-flow: column;
    }
  }
</style>
